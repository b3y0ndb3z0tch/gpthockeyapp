<Screen1>:
    name: 'screen1'
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Screen 1"
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("open")]]
            right_action_items: [["menu", lambda x: app.root.ids.right_nav_drawer.set_state("open")]]
        MDLabel:
            text: "Settings Screen 1"
            halign: 'center'
        MDRaisedButton:
            text: "Go to Screen 2"
            pos_hint: {"center_x": .5}
            on_release: root.manager.current = 'screen2'
