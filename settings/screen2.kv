<Screen2>:
    name: 'screen2'  # Set the name of the screen
    BoxLayout:
        orientation: 'vertical'  # Set the orientation to vertical
        MDTopAppBar:
            title: "Screen 2"  # Set the title of the top app bar
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("open")]]  # Add menu button to open left navigation drawer
            right_action_items: [["menu", lambda x: app.root.ids.settings_right_nav_drawer.set_state("open")]]  # Updated ID for the settings right navigation drawer
        MDLabel:
            text: "Settings Screen 2"  # Set the text of the label
            halign: 'center'  # Set the horizontal alignment to center
        MDRaisedButton:
            text: "Go to Screen 1"  # Set the text of the button
            pos_hint: {"center_x": .5}  # Center the button horizontally
            on_release: root.manager.current = 'screen1'  # Switch to screen1 on button release
